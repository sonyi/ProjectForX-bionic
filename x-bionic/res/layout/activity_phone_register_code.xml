<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_login_background" >
    
     <RelativeLayout
        android:id="@+id/rel_pho_reg_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ic_home_top_background" >

        <ImageView
            android:id="@+id/iv_pho_reg_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_back_btn_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:text="注册"
            android:textColor="@android:color/white" />
    </RelativeLayout>
    
     <TextView android:id="@+id/tv_pho_reg_number"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/ic_phone_register_background"
         android:layout_below="@id/rel_pho_reg_top"
         android:layout_marginTop="15dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:text="13511111111"
         android:gravity="center_vertical"
         android:textSize="20sp"
         android:paddingLeft="10dp"/>
     
      <TextView android:id="@+id/tv_pho_reg_getnum"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/ic_phone_register_getnum"
         android:layout_below="@id/tv_pho_reg_number"
         android:layout_marginTop="15dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:text="获取验证码"
         android:gravity="center"
         android:textSize="25sp"
         android:textColor="@android:color/white"
         />
     
     
     
    
     

</RelativeLayout>
