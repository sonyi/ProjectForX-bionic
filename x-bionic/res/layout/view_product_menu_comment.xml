<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_pro_comment_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="评论"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_pro_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_pro_comment_comment"
        android:layout_below="@id/tv_pro_comment_comment"
        android:layout_marginTop="15dp"
        android:text="name" />

    <LinearLayout
        android:id="@+id/lin_pro_comment_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_pro_comment_name"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/tv_pro_comment_name"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/tv_pro_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_pro_comment_name"
        android:layout_marginRight="15dp"
        android:text="2104-07-09" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pro_comment_name"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_product_comment_dottedline" />

</RelativeLayout>