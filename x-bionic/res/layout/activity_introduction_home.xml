<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rel_experstory_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ic_home_top_background" >

        <ImageView
            android:id="@+id/iv_introduction_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_back_btn_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="X的介绍"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_introduction_history"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/ic_introduce_histroy" />

        <ImageView
            android:id="@+id/iv_introduction_aware"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
             android:scaleType="fitXY"
            android:src="@drawable/ic_introduce_awareimg" />

        <ImageView
            android:id="@+id/iv_introduction_prototype"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
             android:scaleType="fitXY"
            android:src="@drawable/ic_introduce_bionicprototype" />

        <ImageView
            android:id="@+id/iv_introduction_production"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
             android:scaleType="fitXY"
            android:src="@drawable/ic_introduce_productionbase" />

        <ImageView
            android:id="@+id/iv_introduction_design"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
             android:scaleType="fitXY"
            android:src="@drawable/ic_introduce_designanddevelopemt" />
    </LinearLayout>

</LinearLayout>