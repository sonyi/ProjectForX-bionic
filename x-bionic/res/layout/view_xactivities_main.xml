<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
    
    <TextView android:id="@+id/tv_xactivities_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
         android:textColor="@android:color/white"
        android:layout_marginTop="15dp"
        android:text="活动中"/>
    
    <TextView android:id="@+id/tv_xactivities_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_xactivities_activity"
        android:layout_toLeftOf="@id/tv_xactivities_activity"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
         android:textColor="@android:color/white"
        android:text="title"/>
    
    <TextView android:id="@+id/tv_xactivities_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_xactivities_title"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_xactivities_title"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:layout_marginRight="10dp"
        android:text="12/21/2011--01/19/2012"/>
    
    <ImageView android:id="@+id/iv_xactivities_img"
        android:layout_alignLeft="@id/tv_xactivities_date"
        android:layout_below="@id/tv_xactivities_date"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_product_img"/>
    <ImageView android:id="@+id/iv_xactivities_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/iv_xactivities_img"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"/>
    

</RelativeLayout>
