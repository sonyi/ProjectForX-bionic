<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/iv_favorite_img"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_product_img" />

    <TextView
        android:id="@+id/tv_favorite_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
         android:textColor="@android:color/white" 
        android:layout_toRightOf="@id/iv_favorite_img"
        android:singleLine="true"
        android:text="title" />

    <TextView
        android:id="@+id/tv_favorite_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_favorite_title"
        android:layout_below="@id/tv_favorite_title"
        android:layout_marginTop="10dp"
         android:textColor="@android:color/white" 
        android:singleLine="true"
        android:text="price" />

    <TextView
        android:id="@+id/tv_favorite_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_favorite_price"
        android:layout_below="@id/tv_favorite_price"
        android:layout_marginTop="10dp"
        android:singleLine="true"
         android:textColor="@android:color/white" 
        android:text="date" />

    <TextView
        android:id="@+id/tv_favorite_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="#FF7700"
        android:padding="5dp"
        android:text=" 删除 "
        android:textColor="@android:color/white" />
    
       <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_favorite_img"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_product_comment_dottedline" />

</RelativeLayout>